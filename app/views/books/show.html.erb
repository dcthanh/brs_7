<div class="row" style="padding: 20px;">
    <div class="col-md-4">
        <h1><%= @book.name %></h1><br>
        by <%= @book.author %><br>
        About the book :<br>
        <h4><%= @book.desc %></h4>
    </div>
    <div class="col-md-4">
        <%= image_tag(@book.image, alt: @book.name, class: "image_info-book") %>
    </div>
</div>
<div class="row">
  <div class="col-md-2 col-md-offset-4">
    <%= link_to 'START READING', "#", class:"btn btn-warning" %>
  </div>
  <div class="col-md-2">
    <%= link_to 'ADD LIBRARY', "#", class:"btn btn-warning" %>
  </div>
</div>