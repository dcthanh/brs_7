<h1>All Books</h1>
<div id="search" class="input-group">
  <%= render 'search' %>
</div>
<br>
<div class="input-group">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>No.</th>
        <th>Image</th>
        <th>Name</th>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <%= render @books %>
    </tbody>
  </table>
  <%= will_paginate @books %>
</div>