<% if current_user.admin? %>
  <div class="container">
    <div class="row">
      <h3>Users: <%= User.count %> registered</h3>
      <div class="column">
        <table class="table">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <%= render user %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <% provide :title, "All Users" %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'devise/shared/info' %>
      </section>
      <section>
        <%= render 'devise/shared/follow' %>
      </section>
    </aside>
  <div class="col-md-8">
    <div id="users_div"><%= render 'list_users' %></div>
  </div>
<% end %>